#!/bin/sh

set -e

find src -name \*.c | \
	xargs splint +strict +posixstrictlib \
	-sys-dir-errors -proto-param-name -warn-missing-globs \
	-sizeof-type -bounds-read -bounds-write \
	-DGETTEXT_PACKAGE=\"cportage\" -DCPORTAGE_COMPILATION \
	-Iinclude -Ibuild/src/cmerge -Ibuild/src/cportage \
	-I../glib -I../glib/glib -sys-dirs /usr/include:../glib:../glib/glib
